# Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://contracts_user:contracts_pass@localhost:5433/contracts_db

# Server Configuration
PORT=3002
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your-secret-key-here-change-this-in-production

# Frontend URL
FRONTEND_URL=http://localhost:3000

# File Upload Configuration (optional)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@caplocations.com

# JWT Configuration
JWT_SECRET=your-jwt-secret-here-change-this-in-production
JWT_EXPIRES_IN=7d